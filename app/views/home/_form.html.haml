= form_for @reading, :remote => true, :html => { :id => utility.name.parameterize } do |f|
  = f.error_messages
  %div.toolbar
    %h1 Blathy
    %a.back{ :href => "#back" } Back
  %ul.rounded
    %li
      = f.text_field :value, { :placeholder => "#{utility.name} value", :size => 10 } # TODO: Value is not sent when the type is set to tel (:type  => :tel)
    %li
      = f.date_select :measured_at
  = hidden_field :reading, :utility_id, :value => utility.id
  %a.submit Save