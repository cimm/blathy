$(document).ready(function(e){
  var linkName = "#<%= @utility.name.parameterize %>"
  var graphName = linkName + "-graph";
  var barWidth = 15;
  var graphHeight = "30px";
  $(linkName).bind('pageAnimationEnd', function(event, info){
    var data = <%= @data.inspect %>;
    $(graphName).sparkline(data, {type: 'bar', barColor: '#dedcc9', barWidth: barWidth, height: graphHeight});
  })
});
